{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "types": ["node", "vitest/globals"],
        "declaration": false,
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "lib": ["ESNext", "dom", "dom.iterable"],
        "paths": {
            "@editor-utils": ["./editors/utils"],
            "@editor-utils/*": ["./editors/utils/*"],
        },
    },
    "include": [
        "./index.ts",
        "**/*.ts",
        "**/*.tsx",
        "*.config.js",
        "*.config.ts",
        "postcss.config.cjs",
        "create-require.js",
    ],
    "exclude": ["dist/", "node_modules"],
}
