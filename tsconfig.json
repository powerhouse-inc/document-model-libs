{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "types": ["node", "vitest/globals"],
        "declaration": false,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "lib": ["ESNext", "dom", "dom.iterable"]
    },
    "include": [
        "./index.ts",
        "**/*.ts",
        "**/*.tsx",
        "*.config.js",
        "*.config.ts",
    ],
    "exclude": ["dist/", "node_modules"]
}
