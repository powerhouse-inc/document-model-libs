{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "types": ["node", "vitest/globals"],
        "declaration": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "emitDeclarationOnly": true,
        "jsx": "react-jsx",
        "lib": ["ESNext"],
    },
    "include": ["./index.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["dist/", "node_modules"]
}
